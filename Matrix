#include<bits/stdc++.h>
using namespace std;
int main()
{
   int A[2][2],B[2][2],C[2][2],i,j;
   
   //SCAN MATRIX A
   
   cout<<"Enter the first matrix : ";

   
   for(i=0;i<2;i++)
   {
   	for(j=0;j<2;j++)
   		{
   			cin>>A[i][j];
	   	}
   }
   
   	//SCAN MATRIX B
   		
   		cout<<"\nEnter the second matrix : ";
   		for(i=0;i<2;i++)
   		{
   			for(j=0;j<2;j++)
   				{
   					cin>>B[i][j];
	   			}
   		}
   		
	//PRINT MATRIX A
	
			cout<<"\tA\n\n";
			
   			for(i=0;i<2;i++)
      		{
   				for(j=0;j<2;j++)
   					{
   						cout<<"\t"<<A[i][j];
	   				}
	    	cout<<"\n\n";
   			}
   	
   	cout<<"\n\n";
   	
   	//PRINT MATRIX B
   	
   		cout<<"\tB\n\n";
   		for(i=0;i<2;i++)
      	{
   			for(j=0;j<2;j++)
   				{
   					cout<<"\t"<<B[i][j];
	   			}
	   			cout<<"\n\n";
   		}
   	cout<<"\n\n";
   	
   	//FOR MATRIX C
    
   		cout<<"\tC\n\n";
 		for(i=0;i<2;i++)
      	{
      		
   			for(j=0;j<2;j++)
   				{
   					C[i][j]=A[i][j]+B[i][j]; 
	//IF YOU WANT TO DIVIDE(\),SUBTRACTION(-) THIS VALUE 
	//THEN YOU ONLY NEED TO CHANGE THE OPERATOR HERE
   					cout<<"\t"<<C[i][j];
	   			}
	   			cout<<"\n\n";
   		}  
   
 			
    return 0;
}
