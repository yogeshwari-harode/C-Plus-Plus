#include<bits/stdc++.h>
using namespace std;

class Complex{
	private:
	int real,img;
	public:
	void input(){
		cin>>real>>img;
	}
	void display(){
		cout<<real<<"+"<<img<<"i"<<endl;
	}
	Complex operator +(Complex c){
		Complex temp;
		temp.real=real+c.real;
		temp.img=img+c.img;
		return (temp);
	}
};


int main(){
	Complex c1,c2,c3;
	c1.input();
	c2.input();
	c3=c1+c2;
	c3.display();
	return 0;
}
